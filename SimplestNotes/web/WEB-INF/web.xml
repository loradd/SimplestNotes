<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>data.source</param-name>
        <!-- LORENZO -->
         <!--<param-value>java:comp/env/jdbc/simpleNotes</param-value>-->
        <!-- MARCO + PAOLO -->
       <param-value>java:comp/env/jdbc/simplenotes</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>template</param-value>
    </context-param>
    <context-param>
        <param-name>view.menu_template</param-name>
        <param-value>menu-header.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.login_template</param-name>
        <param-value>header-login.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>iso-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.f4i.iw.simplestnote.ContextInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>SimpleNoteBaseController</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.SimpleNoteBaseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>core</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.init</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logged</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.logged</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginView</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.loginView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Utility</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.Validate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewNote</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.NewNote</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveTag</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.RemoveTag</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Recovery</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.Recovery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Accept</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.Accept</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showAcceptShared</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.showAcceptShared</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerEditor</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.ManagerEditor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>note</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.note</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tag</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.controller.tag</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveUser</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.RemoveUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RestoreNote</servlet-name>
        <servlet-class>it.univaq.f4i.iw.simplestnote.view.RestoreNote</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logged</servlet-name>
        <url-pattern>/logged</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginView</servlet-name>
        <url-pattern>/loginView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Utility</servlet-name>
        <url-pattern>/Utility</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewNote</servlet-name>
        <url-pattern>/NewNote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveTag</servlet-name>
        <url-pattern>/RemoveTag</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Recovery</servlet-name>
        <url-pattern>/Recovery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Accept</servlet-name>
        <url-pattern>/Accept</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showAcceptShared</servlet-name>
        <url-pattern>/showAcceptShared</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>note</servlet-name>
        <url-pattern>/note</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tag</servlet-name>
        <url-pattern>/tag</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerEditor</servlet-name>
        <url-pattern>/ManagerEditor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveUser</servlet-name>
        <url-pattern>/RemoveUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RestoreNote</servlet-name>
        <url-pattern>/RestoreNote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SimpleNoteBaseController</servlet-name>
        <url-pattern>/simplenotebasecontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>core</servlet-name>
        <url-pattern>/core</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>core</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/simpleNotes</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <error-page>
        <error-code>404</error-code>
        <location>/template/error-404.ftl.html</location>
    </error-page>
</web-app>
